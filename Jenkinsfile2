pipeline{
    agent any
    stages{
        stage("build code"){
            steps{
                sh "mvn install"
            }
        }
        stage("test code"){  sh "ls -lrt target/"
                sh "mv target/*.jar target/onlinebookstore-snapshot-${BUILD_NUMBER}.jar"
            steps{
                sh "mvn test"
            }
        }
    }
}
